{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vite/client", "node"],
    "baseUrl": "package",
    "allowJs": true
  },
  "include": ["package", "package/script.ts"],
  "exclude": ["dist", "node_modules"]
}